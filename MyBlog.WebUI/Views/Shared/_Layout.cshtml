<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="shortcut icon" type="image/png" href="@Url.Content("~/Content/images/favicon.ico")" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <meta name="robots" content="index, follow" />
    <meta name="author" content="Ömer Arıyürek" />
    <meta name="owner" content="Ömer Arıyürek" />
    <meta name="copyright" content="(c) 2019 Ömer Arıyürek (omerariyurek.com) Tüm Hakları Saklıdır." />
    @RenderSection("metaTags", false)
    <link href="~/Content/styles/reset.min.css" rel="stylesheet" />
    <link href="~/Content/styles/style.min.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css?family=Poppins:100,200,300,400,500,600,700" rel="stylesheet">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.1/css/all.css" integrity="sha384-50oBUHEmvpQ+1lW4y57PTFmhCaXp0ML5d60M1M7uH2+nqUivzIebhndOJK28anvf" crossorigin="anonymous">
</head>
<body>
    <div class="load-wrapper hidden">
        <img src="~/Content/images/Spinner-1s-200px.gif" />
    </div>
    @await Component.InvokeAsync("Sidebar")
    @RenderBody()
    <div class="scroll-top">
        <i class="arrow up"></i>
    </div>
    @await Component.InvokeAsync("Footer")
    <!--Script-->
    <script src="~/Content/scripts/app.js"></script>
    @RenderSection("scripts", false)
</body>
</html>