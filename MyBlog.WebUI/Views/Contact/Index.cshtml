@model MyBlog.Entities.Concrete.Contact
@{
    ViewData["Title"] = "İletişim - Ömer ARIYÜREK";
}
@section scripts{
    <script src="~/lib/jquery/jquery.min.js"></script>
    <script src="~/lib/jquery-validate/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
<section class="contact-wrapper">
    <h2 class="contact-wrapper__contact-title">Bana Ulaşın</h2>
    @if (TempData["Success"] != null)
    {
        <p style="text-align: center;">@TempData["Success"]</p>
    }
    <form asp-controller="Contact" asp-action="Index" method="post" asp-antiforgery="true" class="contact-wrapper__contact-form">
        <input asp-for="ContactName" placeholder="Ad Soyad">
        <span asp-validation-for="ContactName"></span>
        <input asp-for="Email" placeholder="E-Posta Adresi">
        <span asp-validation-for="Email"></span>
        <input asp-for="Subject" placeholder="Konu">
        <span asp-validation-for="Subject"></span>
        <textarea asp-for="Message" cols="30" rows="10" placeholder="Mesaj"></textarea>
        <span asp-validation-for="Message"></span>
        <button type="submit">Gönder</button>
    </form>
    <div class="social-media">
        <ul class="social-media-icons">
            <li>
                <a href="mailto:omerariyurek@@hotmail.com" title="Ömer Arıyürek E-Mail">
                    <img src="~/assets/images/envelope.png" alt="Ömer Arıyürek E-Mail" title="Ömer Arıyürek E-Mail" />
                </a>
            </li>
            <li>
                <a href="https://github.com/omerariyurek" target="_blank" title="Ömer Arıyürek Github">
                    <img src="~/assets/images/github-logo.png" alt="Ömer Arıyürek Github" title="Ömer Arıyürek Github" />
                </a>
            </li>
            <li>
                <a href="https://www.linkedin.com/in/omerariyurek/" target="_blank" title="Ömer Arıyürek LinkedIn">
                    <img src="~/assets/images/linkedin-logo.png" alt="Ömer Arıyürek LinkedIn" title="Ömer Arıyürek LinkedIn" />
                </a>
            </li>
            <li>
                <a href="https://twitter.com/omer_ariyurek" target="_blank" title="Ömer Arıyürek Twitter">
                    <img src="~/assets/images/twitter.png" alt="Ömer Arıyürek Twitter" title="Ömer Arıyürek Twitter" />
                </a>
            </li>
        </ul>
    </div>
</section>