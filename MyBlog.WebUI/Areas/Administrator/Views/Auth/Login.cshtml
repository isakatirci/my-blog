@model MyBlog.Entities.Dtos.UserForLoginDto
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Login - Ömer ARIYÜREK</title>
    <meta name="robots" content="noindex" />
    <meta name="googlebot" content="noindex">
    <link href="~/node_modules/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/node_modules/bootstrap/dist/css/bootstrap-grid.min.css" rel="stylesheet" />
    <link href="~/Content/styles/app.min.css" rel="stylesheet" />
    <link href="~/Content/styles/style.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.2/css/all.css" integrity="sha384-oS3vJWv+0UjzBfQzYUhtDYW+Pj2yciDJxpsK1OYPAYjqT085Qq/1cq5FLXAZQ7Ay" crossorigin="anonymous">
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400" rel="stylesheet">
</head>
<body>
    <section id="login">
        <div class="login-page-base">
            <div class="login-page col-md-3">
                <div class="login-page-logo">
                    <img src="~/Content/images/omer-ariyurek-logo.png" />
                </div>
                <form asp-controller="Auth" asp-action="Login" method="post">
                    <div class="form-group">
                        @if (ViewBag.LoginErrorMessage != null)
                        {
                            <div class="form-error-alert">
                                <span >@ViewBag.LoginErrorMessage</span>
                            </div>
                        }
                        <div class="form-group">
                            <input asp-for="UserName" class="form-control" placeholder="Username">
                            <span class="form-validation-alert" asp-validation-for="UserName"></span>
                        </div>
                        <div class="form-group">
                            <input asp-for="Password" type="password" class="form-control" placeholder="Password">
                            <span class="form-validation-alert" asp-validation-for="Password"></span>
                        </div>
                    </div>
                    <div class="login-button">
                        <button type="submit" class="btn btn-info">Login</button>
                    </div>
                </form>
            </div>
        </div>
    </section>
    <!-- Script -->
    <script src="~/node_modules/jquery/dist/jquery.min.js"></script>
    <script src="~/node_modules/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/node_modules/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>