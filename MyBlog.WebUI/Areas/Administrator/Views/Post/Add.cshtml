@model MyBlog.WebUI.Areas.Administrator.Models.ViewModels.PostAddViewModel
@{
    ViewData["Title"] = "Post Add Page";
}
<div class="admin-post">
    <div class="admin-post-input-base col-md-9">
        <div class="admin-post-input">
            <div class="admin-post-title">
                <h3 style="margin-bottom: 12px;">New Post Title</h3>
                <input type="text" placeholder="Post Title" class="form-control">
                <textarea cols="30" rows="10" style="resize: none;margin-top:10px" class="form-control"></textarea>
                <div class="admin-post-title-button">
                    <button class="btn btn-info">Save</button>
                </div>
            </div>
        </div>
    </div>
    <div class="admin-post-check col-md-3">
        <div class="admin-post-check-base">
            <p>Categories</p>
            <div class="admin-post-check-text">
                <select name="Categories" id="categories-select2" multiple="multiple" class="form-control" asp-items="Model.Categories" style="width:150px;margin-bottom:5px;">
                </select>
            </div>
        </div>
        <div class="admin-post-check-base" style="margin-top:25px;">
            <p>Tags</p>
            <div class="admin-post-check-text">
                <select name="Tags" id="tags-select2" multiple="multiple" class="form-control" asp-items="Model.Tags" style="width:150px;margin-bottom:5px;">
                </select>
            </div>
        </div>
        <div class="admin-post-check-base" style="margin-top:25px;">
            <p>Meta Keywords</p>
            <div class="admin-post-check-text">
                <textarea cols="30" rows="3" placeholder="Meta Keywords" class="form-control textarea-size"></textarea>
            </div>

        </div>
        <div class="admin-post-check-base" style="margin-top:25px;">
            <p>Meta Description</p>
            <div class="admin-post-check-text">
                <textarea cols="30" rows="5" placeholder="Meta Description" class="form-control textarea-size"></textarea>
            </div>
        </div>
        <div class="admin-post-check-base" style="margin-top:25px; margin-bottom: 30px;">
            <p>Settings</p>
            <div class="admin-post-check-text">
                <input type="checkbox" class="form-check-input" checked>
                <label>Test</label>
                <br>
                <input type="checkbox" class="form-check-input" checked>
                <label>Test</label>
                <br>
                <input type="checkbox" class="form-check-input" checked>
                <label>Test</label>
            </div>
        </div>
    </div>
</div>
