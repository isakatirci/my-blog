@model MyBlog.WebUI.Areas.Administrator.Models.ViewModels.CategoryIndexViewModel
@{
    ViewData["Title"] = "Category Page";
}
<div class="admin-new-object">
    <div class="admin-add-object col-md-4">
        <div class="admin-object-text">
            <h3>Add New Category</h3>
            <div class="admin-object-input">
                <form asp-controller="Category" asp-action="CategoryAdd" method="post">
                    <div class="form-group">
                        <label>Category Name</label>
                        <input asp-for="Category.CategoryName" placeholder="Category Name" class="form-control">
                        <span asp-validation-for="Category.CategoryName"></span>
                    </div>
                    <div class="form-group">
                        <label>Category Description</label>
                        <textarea asp-for="Category.CategoryDescription" rows="2" cols="20" class="form-control" style="resize: none; margin-top: 10px" placeholder="Category Description"></textarea>
                        <span asp-validation-for="Category.CategoryDescription"></span>
                    </div>
                    <div class="button-object-add">
                        <button type="submit" class="btn btn-info">Add Category</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="admin-object-table col-md-8">
        <div class="search-object">
            <input type="text" class="form-control form-fix" placeholder="Search Category">
            <button type="button" class="btn-info">Search</button>
        </div>
        <div class="delete-object">
            <button type="button" class="btn btn-info">Delete</button>
        </div>
        <div class="admin-object-table-info">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Category Name</th>
                        <th scope="col">Category Description</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var category in Model.Categories)
                    {
                        <tr>
                            <th scope="row">@category.CategoryId</th>
                            <td>@category.CategoryName</td>
                            <td>@category.CategoryDescription</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="pagining-admin" style="width: 100%; position: relative; display: inline-block; text-align: center">
            <nav aria-label="Page navigation example" style="display: inline-block;">
                <ul class="pagination">
                    <li class="page-item">
                        <a class="page-link" href="#" aria-label="Previous">
                            <span aria-hidden="true">&laquo;</span>
                            <span class="sr-only">Previous</span>
                        </a>
                    </li>
                    <li class="page-item"><a class="page-link" href="#">1</a></li>
                    <li class="page-item"><a class="page-link" href="#">2</a></li>
                    <li class="page-item"><a class="page-link" href="#">3</a></li>
                    <li class="page-item">
                        <a class="page-link" href="#" aria-label="Next">
                            <span aria-hidden="true">&raquo;</span>
                            <span class="sr-only">Next</span>
                        </a>
                    </li>
                </ul>
            </nav>
        </div>
    </div>
</div>
