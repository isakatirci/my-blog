<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>@ViewData["Title"] - Admin Panel</title>
    <link rel="shortcut icon" type="image/png" href="@Url.Content("~/assets/favicon.ico")" />
    <meta name="robots" content="noindex" />
    <meta name="googlebot" content="noindex">
    <meta name="google-site-verification" content="-iRDhGMVpjQyeznE7DrkpS_FwH6YNSA5-1y5O2xtsQM" />
    <meta name="yandex-verification" content="02765ec1286687ed" />
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.2/css/all.css" integrity="sha384-oS3vJWv+0UjzBfQzYUhtDYW+Pj2yciDJxpsK1OYPAYjqT085Qq/1cq5FLXAZQ7Ay" crossorigin="anonymous">
    <link href="~/lib/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/lib/bootstrap/css/bootstrap-grid.min.css" rel="stylesheet" />
    <link href="~/lib/select2/css/select2.min.css" rel="stylesheet" />
    <link href="~/lib/select2-bootstrap-theme/select2-bootstrap.min.css" rel="stylesheet" />
    <link href="~/assets/styles/app.min.css" rel="stylesheet" />
    <link href="~/assets/styles/admin-style.min.css" rel="stylesheet" />
</head>
<body>
    <section id="admin-users" class="admin-operations">
        <div class="container-fluid">
            <div class="admin-bar">
                <div class="web-logo">
                    <a href="@Url.Action("Index", "Home")">
                        <img src="~/assets/images/omer-ariyurek-logo.png" class="page-logo" />
                    </a>
                </div>
                <ul class="operations-list">
                    <li class="list-item">
                        <a href="@Url.Action("Index", "Post")">
                            <img src="~/assets/images/posts.png" />
                            Posts
                        </a>
                    </li>
                    <li class="list-item">
                        <a href="@Url.Action("Index", "Category")">
                            <img src="~/assets/images/categories.png" />
                            Categories
                        </a>
                    </li>
                    <li class="list-item">
                        <a href="@Url.Action("Index", "Comment")">
                            <img src="~/assets/images/comments.png" />
                            Comments
                        </a>
                    </li>
                    <li class="list-item">
                        <a href="@Url.Action("Index", "Tag")">
                            <img src="~/assets/images/tags.png" />
                            Tags
                        </a>
                    </li>
                    <li class="list-item">
                        <a href="@Url.Action("Index", "Contact")">
                            <img src="~/assets/images/contacts.png" />
                            Contacts
                        </a>
                    </li>
                </ul>
            </div>
            <div class="admin-content">
                <div class="admin-header">
                    <div class="admin-info">
                        <span class="admin-name">@User.Identity.Name</span>
                        <a href="@Url.Action("Logout","Auth")" class="exit-btn">Çıkış Yap</a>
                    </div>
                </div>
                <div>
                    @RenderBody()
                </div>
            </div>
        </div>
    </section>
    <!-- Script -->
    <script src="~/lib/jquery/jquery.min.js"></script>
    <script src="~/lib/jquery-validate/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-3.4.1.min.js"></script>
    <script src="~/lib/bootstrap/js/bootstrap.min.js"></script>
    <script src="~/lib/select2/js/select2.full.min.js"></script>
    <script src="~/assets/scripts/admin-select2.min.js"></script>
    <script src="~/assets/scripts/admin-app.min.js"></script>
    <!-- Global site tag (gtag.js) - Google Analytics -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=UA-117279684-3"></script>
    <script>
        window.dataLayer = window.dataLayer || [];
        function gtag() { dataLayer.push(arguments); }
        gtag('js', new Date());

        gtag('config', 'UA-117279684-3');
    </script>
    @RenderSection("scripts", false)
</body>
</html>